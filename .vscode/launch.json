{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}",
            "env": {"PYTHONPATH": "${workspaceRoot}"}
        },
        {
            "name": "Run all tests: using -m unittest",
            "type": "python",
            "request": "launch",
            "module": "unittest",
            "args": [
                "discover",
