{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}",
            "env": {"PYTHONPATH": "${workspaceRoot}"}
        },
        {
            "name": "Run all tests: using -m unittest",
            "type": "python",
            "request": "launch",
            "module": "unittest",
            "args": [
                "discover",
                "-v",
                "tests"
            ], 
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}",
            "env": {"PYTHONPATH": "${workspaceRoot}"}
        },
        {
            "name": "Single test: using -m unittest",
            "type": "python",
            "request": "launch",
            "module": "unittest",
            "args": [
                "-v",
                "tests.test_persistence.TestPersistence"
            ], 
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}",
            "env": {"PYTHONPATH": "${workspaceRoot}"}
        }
    ]
}